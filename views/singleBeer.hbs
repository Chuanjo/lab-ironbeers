{{#each beers}}

  <div id='beer-container'>
    <div>
      <img id='beer-img' src='{{this.image_url}}' width='100px' />
    </div>

    <div id='beers-info'>
      <p>{{this.name}}</p>
      <p>First brewed: {{this.first_brewed}}</p>
      <p>Attenuation level: {{this.attenuation_level}}</p>
      <p>Recommended food pairing:</p>
      <ul>
        {{#each this.food_pairing}}
          <li> {{this}}</li>
        {{/each}}
      </ul>
      <p>{{this.description}}</p>
    </div>
  </div>

<div class="buttons">
        <a class="btn btn-primary button-margin" href="/beers">Go back to beers list</a>
    </div>
{{/each}}